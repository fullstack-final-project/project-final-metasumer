<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spring_boot_final.metasumer.dao.ILoginDAO">

	<select id="loginCheck" parameterType="hashmap"	resultType="string">
		SELECT memId FROM member WHERE memId=#{id} AND
		memPwd=#{pwd}
	</select>
	
    <select id="getUsermemNickname" parameterType="string" resultType="string">
        SELECT memNickname
        FROM member
        WHERE memId = #{id}
    </select>
	
</mapper>